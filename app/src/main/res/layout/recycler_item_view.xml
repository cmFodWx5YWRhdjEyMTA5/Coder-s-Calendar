<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/mCardview"
    app:cardBackgroundColor="#BA81EE"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/cardln"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/handle_img"
                android:src="@drawable/codechef_logo"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="#000"
                >

            </View>

            <TextView
                android:text="ProjectEuler+"
                android:textColor="#000"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17sp"
                android:id="@+id/event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                >

            </View>

            <LinearLayout
                android:id="@+id/ln3"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:text="Start :"
                android:textColor="#000"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:visibility="visible"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/start_time"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="18-11-2019 | 09:00 Pm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln4"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="End   :"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:visibility="visible"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/end_time"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="18-11-2019 | 11:00 Pm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                ></View>


            <RelativeLayout
                android:id="@+id/runningcontest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    android:text="Contest Currently Running..."
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/R1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/noti_icon"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/set_reminder_icon"
                    android:layout_width="20sp"
                    android:layout_height="20sp" />

                <TextView
                    android:id="@+id/set_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/noti_icon"
                    android:layout_marginBottom="7dp"
                    android:text="Set Notification"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/bell_reminder_icon"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:layout_toStartOf="@id/bell_reminder"
                    android:layout_margin="10dp"

                    android:src="@drawable/default_alarm"

                    />
                <TextView
                    android:id="@+id/bell_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="7dp"
                    android:text="Set Reminder"
                    android:textColor="#000"
                    android:textSize="15sp" />
        </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
